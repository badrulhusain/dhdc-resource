{
    "version": 2,
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "functions": {
        "api/*.ts": {
            "runtime": "vercel-node@latest"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "cleanUrls": true
}